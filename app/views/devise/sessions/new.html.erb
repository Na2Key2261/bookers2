<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">Log in</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
        </div>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="input-group mb-3">
            <p>Name</p>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
          </div>
          <div class="input-group mb-3">
            <p>Password</p>

            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
          </div>

          <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
        <div class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark' %>
          </div>
      </div>
    </div>
  </div>
</div>
