<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="cnavbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <% if user_signed_in? %>
            <%= link_to 'Bookers', user_path(current_user.id), class: 'navbar-brand text-dark' %>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto flex-row">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Homes', user_path(current_user.id), class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Users', users_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Books', books_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log in", new_user_session_path, class: 'nav-link text-dark' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight infratop.inc</p>
          </div>
          <div class="col-md-8">
            <ul class="p-0 list-unstyled">
              <!-- ここにフッターのリストを追加 -->
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
