

<div class="profile-container w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
				<section>
					<h2>User info</h2>
					<%= image_tag(@user&.get_profile_image(100,100)) if @user %>
					<table>
						<thead>
							<tr>
								<th>name</th>
								<th class="profile-name display-4"><%= @user&.name %></th>
								<th>introduction</th>
							</tr>
								<th></th>

						</thead>

					</table>
				</section>

				<% if @user&.id == current_user&.id %>
					<div class="mt-auto">
						<p><%= link_to "プロフィール編集", edit_user_path(@user), class:"text-dark" %></p>
					</div>
				<% end %>

				<section>
					<h2>New book</h1>
					<% if @book.errors.any? %>
					<div id="error_explanation">
						<h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
						<ul>
							<% @book.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
					<% end %>

					<%= form_with model: @book do |f| %>
						<h4>Title</h4>
						<%= f.text_field :title %>

						<h4>Opinion</h4>
						<%= f.text_area :body %>

						<%= f.submit 'Create Book' %>

					<% end %>
				</section>

				<section>
					<h2>Books Detail</h1>
					<table>
						<thead>
							<tr>
								<th>Title</th>
								<th>Opinion</th>
								<th></th>
							</tr>
						</thead>

						<tbody>

							<tr>
								<td class="profile-name display-4"><%= @user&.name %></td>
								<td><%= @book.title %></td>
								<td><%= @book.body %></td>
								<td><button type="button" class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id)  %></td></button>
								<td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "Are you sure？"} %></td></button>
							</tr>
						</tbody>

					</table>
				</section>
</div>